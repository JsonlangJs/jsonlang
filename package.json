{
  "name": "JsonLang",
  "scripts": {
    "build": "lerna exec --ignore @jsonlang/website npm run build",
    "test": "lerna exec --parallel --ignore @jsonlang/website npm run test",
    "lint": "lerna exec --parallel --ignore @jsonlang/website npm run lint",
    "start": "lerna exec --parallel npm run start"
  },
  "publishConfig": {
    "access": "public"
  },
  "private": true,
  "useWorkspaces": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "lerna": "^7.3.0"
  }
}
