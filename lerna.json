{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useWorkspaces": true,
  "version": "independent",
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "command": {
    "version": {
      "allowBranch": "monorepo",
      "conventionalCommits": true,
      "ignoreChanges": [
        "**/__fixtures__/**",
        "**/__tests__/**",
        "**/node_modules**/", 
        "**/dist/**", 
        "**/**/*spec.ts", 
        "**/**/*e2e-spec.ts"
      ]
    },
    "publish": {
      "access": "public",
      "yes": true,
      "directory": "dist"
    }
  }
}
